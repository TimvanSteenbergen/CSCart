    <queries>
        <item for="install">
            ALTER TABLE `?:products` ADD `facebook_obj_type` VARCHAR(64) NOT NULL;
        </item>
        <item for="install">
            ALTER TABLE `?:pages` ADD `facebook_obj_type` VARCHAR(64) NOT NULL;
        </item>
        <item for="uninstall">
            ALTER TABLE `?:products` DROP `facebook_obj_type`;
        </item>
        <item for="uninstall">
            ALTER TABLE `?:pages` DROP `facebook_obj_type`;
        </item>
    </queries>

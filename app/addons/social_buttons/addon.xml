            <section id="twitter">
                <items>
                    <item id="twitter_header">
                        <type>header</type>
                        <variants/>
                    </item>
                    <item id="twitter_enable">
                        <type>checkbox</type>
                    </item>
                    <item id="twitter_via">
                        <type>input</type>
                    </item>
                    <item id="twitter_size">
                        <type>selectbox</type>
                        <default_value>medium</default_value>
                        <variants>
                            <item id="medium">
                            </item>
                            <item id="large">
                            </item>
                        </variants>
                    </item>
                    <item id="twitter_display_count">
                        <type>selectbox</type>
                        <default_value>horizontal</default_value>
                        <variants>
                            <item id="none">
                            </item>
                            <item id="horizontal">
                            </item>
                            <item id="vertical">
                            </item>
                        </variants>
                    </item>
                    <item id="twitter_display_on">
                        <type>multiple checkboxes</type>
                        <variants>
                                <item id="products">
                                </item>
                                <item id="pages">
                                </item>
                        </variants>
                    </item>
                </items>
            </section>
